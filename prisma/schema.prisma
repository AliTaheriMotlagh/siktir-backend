// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  fingerPrint   String
  Dokme         Dokme[]
  Siktir        Siktir[]
  Visit         Visit[]

  @@map("Users")
}

model Dokme {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  userId      String
  url         String
  title       String
  description String
  expireDate  DateTime
  visitCount  Int
  siktirCount Int
  user        User     @relation(fields: [userId], references: [id])
  Siktir      Siktir[]
  Visit       Visit[]

  @@map("Dokmes")
}

model Siktir {
  createdAt DateTime @default(now())
  userId    String
  dokmeId   String
  dokme     Dokme    @relation(fields: [dokmeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, dokmeId])
}

model Visit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String
  dokmeId   String
  dokme     Dokme    @relation(fields: [dokmeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}